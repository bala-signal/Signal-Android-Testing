<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/transparent" android:id="@+id/recipient_preference_root" android:layout_height="match_parent" android:layout_marginEnd="0dp" android:layout_marginStart="0dp" android:layout_width="match_parent">



    <com.google.android.material.appbar.AppBarLayout android:background="@color/transparent" android:id="@+id/app_bar_layout" android:layout_height="300dp" android:layout_width="match_parent">



        <com.google.android.material.appbar.CollapsingToolbarLayout app:layout_scrollFlags="scroll|exitUntilCollapsed" android:background="@color/transparent" android:id="@+id/collapsing_toolbar" android:layout_height="match_parent" android:layout_width="match_parent">



            <ImageView app:layout_collapseMode="parallax" app:layout_collapseParallaxMultiplier="0.7" android:id="@+id/avatar" android:layout_height="match_parent" android:layout_width="match_parent" android:transitionName="avatar" />



            <View app:layout_collapseMode="pin" android:background="@drawable/recipient_preference_scrim_top" android:layout_height="88dp" android:layout_width="match_parent" />



            <View android:background="@drawable/recipient_preference_scrim_bottom" android:layout_alignBottom="@+id/image" android:layout_gravity="bottom" android:layout_height="98dp" android:layout_width="match_parent" />



            <androidx.appcompat.widget.Toolbar app:layout_collapseMode="pin" android:background="@color/transparent" android:id="@+id/toolbar" android:layout_height="?attr/actionBarSize" android:layout_width="match_parent" android:theme="@style/TextSecure.DarkActionBar.Conversation">



            </androidx.appcompat.widget.Toolbar>



        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>



    <androidx.core.widget.NestedScrollView app:layout_behavior="@string/appbar_scrolling_view_behavior" android:contentDescription="appbar_scrolling_view_behavior" android:descendantFocusability="blocksDescendants" android:fillViewport="true" android:id="@+id/scroll_view" android:layout_height="match_parent" android:layout_width="match_parent">



        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">



            <TextView style="?android:attr/preferenceCategoryStyle" android:contentDescription="recipient_preference_activity__shared_media" android:focusableInTouchMode="true" android:id="@+id/rail_label" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="16dp" android:text="@string/recipient_preference_activity__shared_media" android:textColor="@color/core_ultramarine" android:visibility="gone" />



            <org.thoughtcrime.securesms.components.ThreadPhotoRailView android:id="@+id/recent_photos" android:layout_height="90dp" android:layout_marginBottom="16dp" android:layout_width="match_parent" android:visibility="visible" />



            <include layout="@layout/preference_divider" />



            <FrameLayout android:id="@+id/preference_fragment" android:layout_height="wrap_content" android:layout_width="match_parent" />



        </LinearLayout>



    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
