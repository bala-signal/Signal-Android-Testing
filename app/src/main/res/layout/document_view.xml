<merge xmlns:android="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/apk/res-auto" android:context="org.thoughtcrime.securesms.components.DocumentView">



        <LinearLayout app:clickable="false" app:focusable="false" app:gravity="center_vertical" app:id="@+id/document_container" app:layout_height="wrap_content" app:layout_width="fill_parent" app:orientation="horizontal">



            <org.thoughtcrime.securesms.components.AnimatingToggle app:clickable="false" app:focusable="false" app:gravity="center" app:id="@+id/control_toggle" app:layout_gravity="center" app:layout_height="wrap_content" app:layout_width="wrap_content">



                <com.pnikosis.materialishprogress.ProgressWheel tools:matProg_barColor="@color/white" tools:matProg_linearProgress="true" tools:matProg_spinSpeed="0.333" app:clickable="false" app:id="@+id/download_progress" app:layout_gravity="center" app:layout_height="48dp" app:layout_width="48dp" app:visibility="gone" android:visibility="gone" />



                <FrameLayout app:clickable="false" app:focusable="false" app:gravity="center" app:id="@+id/icon_container" app:layout_gravity="center_vertical" app:layout_height="wrap_content" app:layout_marginStart="-4dp" app:layout_width="wrap_content" app:visibility="visible">



                    <ImageView app:id="@+id/icon" app:layout_height="50dp" app:layout_width="38dp" app:src="?attachment_document_icon_large" />



                    <TextView style="@style/Signal.Text.Caption" app:clickable="false" app:gravity="center" app:id="@+id/document" app:layout_gravity="center" app:layout_height="wrap_content" app:layout_width="wrap_content" app:scaleType="centerInside" app:textAlignment="center" app:textColor="@color/core_black" app:textSize="10sp" app:visibility="visible" android:text="PDF" android:visibility="visible" />



                </FrameLayout>



                <ImageView app:background="@drawable/circle_touch_highlight_background" app:clickable="true" app:contentDescription="audio_view__download_accessibility_description" app:id="@+id/download" app:layout_gravity="center_vertical" app:layout_height="wrap_content" app:layout_width="wrap_content" app:src="@drawable/ic_download_circle_fill_white_48dp" app:visibility="gone" />



            </org.thoughtcrime.securesms.components.AnimatingToggle>



            <LinearLayout app:clickable="false" app:focusable="false" app:layout_height="wrap_content" app:layout_marginStart="2dp" app:layout_width="match_parent" app:orientation="vertical">



                <TextView style="@style/Signal.Text.Body" app:clickable="false" app:ellipsize="end" app:id="@+id/file_name" app:layout_height="wrap_content" app:layout_width="match_parent" app:maxLines="1" app:singleLine="true" android:text="The-Anarchist-Tension-by-Alfredo-Bonanno.pdf" />



                <TextView style="@style/Signal.Text.Caption" app:clickable="false" app:id="@+id/file_size" app:layout_height="wrap_content" app:layout_width="wrap_content" android:text="24kb" />

            </LinearLayout>

        </LinearLayout>

</merge>
