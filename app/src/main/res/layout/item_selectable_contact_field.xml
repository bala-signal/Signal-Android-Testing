<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:paddingBottom="5dp" android:paddingTop="5dp">



    <ImageView android:id="@+id/contact_field_icon" android:layout_height="24dp" android:layout_margin="16dp" android:layout_width="24dp" android:tint="@color/grey_600" app:src="@drawable/ic_phone_right_unlock_solid_24" />



    <ImageView android:id="@+id/contact_field_avatar" android:layout_height="40dp" android:layout_width="40dp" android:visibility="gone" app:src="@drawable/ic_contact_picture" />



    <LinearLayout android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical">



        <org.thoughtcrime.securesms.components.emoji.EmojiTextView android:ellipsize="end" android:id="@+id/contact_field_value" android:layout_height="wrap_content" android:layout_width="match_parent" android:maxLines="1" app:text="(610) 867-5309" />



        <TextView android:ellipsize="end" android:id="@+id/contact_field_label" android:layout_height="wrap_content" android:layout_width="match_parent" android:maxLines="1" app:text="Mobile" />



    </LinearLayout>



    <CheckBox android:id="@+id/contact_field_checkbox" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_width="wrap_content" />



</LinearLayout>
