<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:fillViewport="true" android:id="@+id/scroll_view" android:layout_height="match_parent" android:layout_width="match_parent" app:context=".registration.fragments.EnterPhoneNumberFragment">



    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="0dp" android:layout_width="match_parent">



        <FrameLayout tools:layout_constraintEnd_toEndOf="parent" tools:layout_constraintHorizontal_bias="0.5" tools:layout_constraintStart_toStartOf="parent" tools:layout_constraintTop_toBottomOf="@+id/verify_subheader" android:background="@drawable/labeled_edit_text_background_inactive" android:id="@+id/country_spinner_frame" android:layout_height="wrap_content" android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:layout_marginTop="24dp" android:layout_width="match_parent">



            <Spinner android:id="@+id/country_spinner" android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="16dp" android:textAlignment="viewStart" />



        </FrameLayout>



        <LinearLayout tools:layout_constraintEnd_toEndOf="parent" tools:layout_constraintStart_toStartOf="parent" tools:layout_constraintTop_toBottomOf="@+id/country_spinner_frame" android:id="@+id/linearLayout" android:layoutDirection="ltr" android:layout_height="wrap_content" android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:layout_marginTop="16dp" android:layout_width="match_parent" android:orientation="horizontal">



            <org.thoughtcrime.securesms.components.LabeledEditText tools:labeledEditText_background="@color/white" tools:labeledEditText_textLayout="@layout/country_code_text" android:id="@+id/country_code" android:layout_height="wrap_content" android:layout_marginEnd="12dp" android:layout_weight="1" android:layout_width="0dp" />



            <org.thoughtcrime.securesms.components.LabeledEditText tools:labeledEditText_background="@color/white" tools:labeledEditText_label="Phone Number" tools:labeledEditText_textLayout="@layout/phone_text" android:id="@+id/number" android:layout_height="wrap_content" android:layout_weight="3" android:layout_width="0dp" />

        </LinearLayout>



        <TextView style="@style/Signal.Text.Headline.Registration" tools:layout_constraintEnd_toEndOf="parent" tools:layout_constraintHorizontal_bias="0.5" tools:layout_constraintStart_toStartOf="parent" tools:layout_constraintTop_toTopOf="parent" android:contentDescription="RegistrationActivity_enter_your_phone_number_to_get_started" android:gravity="center" android:id="@+id/verify_header" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:layout_marginTop="40dp" android:layout_width="match_parent" android:text="@string/RegistrationActivity_enter_your_phone_number_to_get_started" />



        <TextView style="@style/Signal.Text.Body.Registration" tools:layout_constraintTop_toBottomOf="@+id/verify_header" android:contentDescription="RegistrationActivity_you_will_receive_a_verification_code" android:gravity="center" android:id="@+id/verify_subheader" android:layout_height="wrap_content" android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:layout_marginTop="16dp" android:layout_width="match_parent" android:text="@string/RegistrationActivity_you_will_receive_a_verification_code" app:layout_editor_absoluteX="0dp" />



        <Button style="@style/Button.Borderless.Registration" tools:layout_constraintBottom_toBottomOf="parent" tools:layout_constraintEnd_toEndOf="parent" tools:layout_constraintHorizontal_bias="0.5" tools:layout_constraintStart_toStartOf="parent" tools:layout_constraintTop_toBottomOf="@+id/registerButton" tools:layout_constraintVertical_bias="0" android:id="@+id/cancel_button" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:text="@android:string/cancel" android:textColor="@color/core_grey_60" />



        <com.dd.CircularProgressButton style="@style/Button.Registration" tools:cpb_textIdle="@string/RegistrationActivity_next" tools:layout_constraintBottom_toBottomOf="parent" tools:layout_constraintEnd_toEndOf="parent" tools:layout_constraintHorizontal_bias="0.5" tools:layout_constraintStart_toStartOf="parent" tools:layout_constraintTop_toBottomOf="@+id/linearLayout" tools:layout_constraintVertical_bias="0" android:contentDescription="RegistrationActivity_next" android:id="@+id/registerButton" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:layout_marginTop="16dp" android:layout_width="0dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
