<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:id="@+id/quote_container" android:layout_height="wrap_content" android:layout_margin="3dp" android:layout_width="wrap_content" android:visibility="gone" app:visibility="visible">



    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">



        <LinearLayout android:id="@+id/quote_main" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">



            <ImageView android:id="@+id/quote_bar" android:layout_height="match_parent" android:layout_width="@dimen/quote_corner_radius_bottom" android:src="@color/white" app:tint="@color/purple_400" />



            <LinearLayout android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical">



                <org.thoughtcrime.securesms.components.emoji.EmojiTextView style="@style/Signal.Text.Caption" android:ellipsize="end" android:id="@+id/quote_author" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxLines="1" android:textColor="@color/core_black" android:textStyle="bold" app:text="Peter Parker" />



                <LinearLayout android:gravity="center_vertical" android:id="@+id/quote_attachment_container" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:layout_width="wrap_content" android:orientation="horizontal" android:visibility="gone" app:visibility="visible">



                    <ImageView android:layout_height="35dp" android:layout_marginEnd="4dp" android:layout_width="27dp" android:paddingStart="-4dp" android:src="?attr/attachment_document_icon_small" />



                    <TextView style="@style/Signal.Text.Body" android:ellipsize="end" android:id="@+id/quote_attachment_name" android:layout_height="wrap_content" android:layout_width="match_parent" android:maxLines="1" android:textColor="@color/core_grey_90" app:text="The-Amazing-Spider-Man.cba" />



                </LinearLayout>



                <TextView style="@style/Signal.Text.Caption" android:id="@+id/media_type" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_width="wrap_content" android:paddingTop="4dp" android:textColor="@color/core_grey_90" android:textStyle="italic" android:visibility="gone" app:text="Photo" app:visibility="visible" />



                <org.thoughtcrime.securesms.components.emoji.EmojiTextView style="@style/Signal.Text.Body" android:ellipsize="end" android:id="@+id/quote_text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxLines="2" app:text="With great power comes great responsibility." app:visibility="visible" />



            </LinearLayout>



            <FrameLayout android:layout_height="match_parent" android:layout_width="wrap_content">



                <ImageView android:id="@+id/quote_thumbnail" android:layout_height="match_parent" android:layout_width="60dp" android:scaleType="centerCrop" android:visibility="gone" app:visibility="gone" />



                <FrameLayout android:background="@drawable/circle_white" android:id="@+id/quote_video_overlay" android:layout_gravity="center" android:layout_height="32dp" android:layout_width="32dp" android:longClickable="false" android:visibility="gone" app:visibility="visible">



                    <ImageView tools:srcCompat="@drawable/triangle_right" android:layout_height="16dp" android:layout_marginStart="11dp" android:layout_marginTop="8dp" android:layout_width="13dp" android:scaleType="fitXY" android:tint="@color/core_ultramarine" />



                </FrameLayout>



            </FrameLayout>



        </LinearLayout>



        <LinearLayout android:id="@+id/quote_missing_footer" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:padding="8dp" android:visibility="gone" app:visibility="visible">



            <ImageView android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_width="wrap_content" android:src="@drawable/ic_broken_link" android:tint="?attr/quote_missing_icon_color" />



            <TextView style="@style/Signal.Text.Caption" android:contentDescription="QuoteView_original_missing" android:id="@+id/quote_missing_text" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/QuoteView_original_missing" android:textColor="@color/core_grey_90" />



        </LinearLayout>





    </LinearLayout>



    <ImageView android:background="@drawable/dismiss_background" android:id="@+id/quote_dismiss" android:layout_gravity="top|end" android:layout_height="wrap_content" android:layout_marginEnd="6dp" android:layout_marginTop="6dp" android:layout_width="wrap_content" android:src="@drawable/ic_close_white_18dp" android:tint="?quote_dismiss_button_tint" />



</merge>
