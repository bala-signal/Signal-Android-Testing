<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent">



    <androidx.recyclerview.widget.RecyclerView android:id="@+id/giphy_list" android:layout_height="match_parent" android:layout_width="match_parent" android:scrollbars="vertical" />



    <ProgressBar android:id="@+id/loading_progress" android:indeterminate="true" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="visible" />



    <TextView android:contentDescription="giphy_fragment__nothing_found" android:gravity="center" android:id="@+id/no_results" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/giphy_fragment__nothing_found" android:visibility="gone" />



</FrameLayout>
