<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools">



    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">



        <LinearLayout android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/message_bubble_horizontal_padding" android:layout_marginStart="@dimen/message_bubble_horizontal_padding" android:layout_width="match_parent" android:orientation="horizontal">



            <ImageView android:id="@+id/contact_avatar" android:layout_height="48dp" android:layout_marginEnd="8dp" android:layout_width="48dp" />



            <LinearLayout android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical">



                <org.thoughtcrime.securesms.components.emoji.EmojiTextView style="@style/Signal.Text.Body" android:ellipsize="end" android:fontFamily="sans-serif-medium" android:id="@+id/contact_name" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:maxLines="1" android:textSize="16sp" app:text="Peter Parker" />



                <TextView style="@style/Signal.Text.Caption" android:ellipsize="end" android:id="@+id/contact_number" android:layout_height="wrap_content" android:layout_width="match_parent" android:maxLines="1" android:textColor="@color/grey_600" app:text="(610) 555-5555" />



            </LinearLayout>



        </LinearLayout>



        <org.thoughtcrime.securesms.components.ConversationItemFooter android:elevation="9dp" android:gravity="end" android:id="@+id/contact_footer" android:layout_gravity="end" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/message_bubble_horizontal_padding" android:layout_marginStart="@dimen/message_bubble_horizontal_padding" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:orientation="horizontal" />



        <TextView style="@style/Signal.Text.Preview" android:background="?attr/shared_contact_item_button_color" android:ellipsize="end" android:fontFamily="sans-serif-medium" android:foreground="?attr/selectableItemBackground" android:gravity="center" android:id="@+id/contact_action_button" android:layout_height="wrap_content" android:layout_marginTop="@dimen/message_bubble_bottom_padding" android:layout_width="match_parent" android:maxLines="1" android:padding="10dp" android:textColor="@color/core_ultramarine" app:text="Add to Contacts" />



    </LinearLayout>



</merge>
