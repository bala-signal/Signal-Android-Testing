<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/root" android:layout_height="match_parent" android:layout_width="match_parent">



    <com.google.android.material.appbar.AppBarLayout android:layout_height="wrap_content" android:layout_width="match_parent">



        <com.google.android.material.appbar.CollapsingToolbarLayout android:background="?attr/shared_contact_details_header_background" android:layout_height="wrap_content" android:layout_width="match_parent">



            <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_marginTop="?attr/actionBarSize" android:layout_width="match_parent" android:orientation="vertical">



                <ImageView app:layout_collapseMode="parallax" app:layout_collapseParallaxMultiplier="0.7" android:id="@+id/contact_details_avatar" android:layout_height="125dp" android:layout_width="125dp" android:padding="8dp" android:transitionName="avatar" />



                <org.thoughtcrime.securesms.components.emoji.EmojiTextView android:gravity="center" android:id="@+id/contact_details_name" android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="20sp" android:transitionName="name" tools:text="Peter Parker" />



                <TextView android:gravity="center" android:id="@+id/contact_details_number" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:layout_width="match_parent" android:transitionName="number" tools:text="(610) 555-5555" />



                <Button style="@style/Button.Primary" android:contentDescription="SharedContactDetailsActivity_add_to_contacts" android:id="@+id/contact_details_add_button" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_width="wrap_content" android:text="@string/SharedContactDetailsActivity_add_to_contacts" />



                <FrameLayout android:layout_height="wrap_content" android:layout_width="match_parent">



                    <Button style="@style/Button.Borderless" android:contentDescription="SharedContactDetailsActivity_invite_to_signal" android:id="@+id/contact_details_invite_button" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_width="wrap_content" android:text="@string/SharedContactDetailsActivity_invite_to_signal" android:visibility="gone" tools:visibility="gone" />



                    <LinearLayout style="?attr/buttonBarStyle" android:id="@+id/contact_details_engage_container" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:visibility="gone" tools:visibility="visible">



                        <LinearLayout android:gravity="center" android:id="@+id/contact_details_message_button" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical" android:padding="10dp">



                            <ImageView android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:layout_width="wrap_content" android:src="@drawable/message_24dp" android:tint="@color/core_ultramarine" />



                            <TextView android:contentDescription="SharedContactDetailsActivity_signal_message" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/SharedContactDetailsActivity_signal_message" android:textColor="@color/core_ultramarine" />



                        </LinearLayout>



                        <LinearLayout android:gravity="center" android:id="@+id/contact_details_call_button" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical" android:padding="10dp">



                            <ImageView android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:layout_width="wrap_content" android:src="@drawable/phone_24dp" android:tint="@color/core_ultramarine" />



                            <TextView android:contentDescription="SharedContactDetailsActivity_signal_call" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/SharedContactDetailsActivity_signal_call" android:textColor="@color/core_ultramarine" />



                        </LinearLayout>



                    </LinearLayout>



                </FrameLayout>



            </LinearLayout>



            <androidx.appcompat.widget.Toolbar app:layout_collapseMode="pin" android:background="@color/transparent" android:id="@+id/toolbar" android:layout_height="?attr/actionBarSize" android:layout_width="match_parent" android:theme="@style/TextSecure.LightActionBar.DarkText" />



        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>



    <androidx.recyclerview.widget.RecyclerView app:layout_behavior="@string/appbar_scrolling_view_behavior" android:contentDescription="appbar_scrolling_view_behavior" android:id="@+id/contact_details_fields" android:layout_height="match_parent" android:layout_width="match_parent" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>
