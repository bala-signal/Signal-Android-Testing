<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">



    <FrameLayout android:elevation="2dp" android:id="@+id/item_container" android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingBottom="15dp" android:paddingTop="15dp" />



    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:paddingEnd="10dp" android:paddingStart="10dp">



        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent">



            <androidx.appcompat.widget.AppCompatTextView tools:drawableStartCompat="@drawable/ic_info_outline_message_details_24" android:contentDescription="message_details_header__issues_need_your_attention" android:drawablePadding="4dp" android:gravity="center_vertical" android:id="@+id/error_text" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:padding="5dp" android:text="@string/message_details_header__issues_need_your_attention" android:textSize="16sp" android:visibility="gone" app:visibility="visible" />



            <Button style="@style/InfoButton" android:contentDescription="message_recipients_list_item__resend" android:drawableStart="@drawable/ic_refresh_white_18dp" android:id="@+id/resend_button" android:layout_gravity="center_vertical" android:layout_height="38sp" android:layout_width="wrap_content" android:paddingBottom="5dp" android:paddingEnd="10dp" android:paddingStart="10dp" android:paddingTop="5dp" android:text="@string/message_recipients_list_item__resend" android:visibility="gone" app:visibility="visible" />



        </LinearLayout>



        <TableLayout android:id="@+id/metadata_container" android:layout_height="match_parent" android:layout_width="match_parent" android:shrinkColumns="1">



            <TableRow android:id="@+id/sent_container" android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="@dimen/message_details_table_row_pad">



                <TextView android:contentDescription="message_details_header__sent" android:gravity="end" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/message_details_header__sent" android:textStyle="bold" />



                <TextView android:id="@+id/sent_time" android:layout_height="wrap_content" android:layout_marginStart="@dimen/message_details_table_row_pad" android:layout_width="wrap_content" app:text="Jan 18, 2015, 12:29:37 AM GMT-08:00" />



            </TableRow>



            <TableRow android:id="@+id/received_container" android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="@dimen/message_details_table_row_pad">



                <TextView android:contentDescription="message_details_header__received" android:gravity="end" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/message_details_header__received" android:textStyle="bold" />



                <TextView android:id="@+id/received_time" android:layout_height="wrap_content" android:layout_marginStart="@dimen/message_details_table_row_pad" android:layout_width="wrap_content" app:text="Jan 18, 2015, 12:31:15 AM GMT-08:00" />



            </TableRow>



            <TableRow android:id="@+id/expires_container" android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="@dimen/message_details_table_row_pad" android:visibility="gone" app:visibility="visible">



                <TextView android:contentDescription="message_details_header__disappears" android:gravity="end" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/message_details_header__disappears" android:textStyle="bold" />



                <TextView android:id="@+id/expires_in" android:layout_height="wrap_content" android:layout_marginStart="@dimen/message_details_table_row_pad" android:layout_width="wrap_content" app:text="1 week" />



            </TableRow>



            <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="@dimen/message_details_table_row_pad">



                <TextView android:contentDescription="message_details_header__via" android:gravity="end" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/message_details_header__via" android:textStyle="bold" />



                <TextView android:id="@+id/transport" android:layout_height="wrap_content" android:layout_marginStart="@dimen/message_details_table_row_pad" android:layout_width="wrap_content" app:text="Push (TextSecure)" />



            </TableRow>



            <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="@dimen/message_details_table_row_pad">



                <TextView android:contentDescription="message_details_header__to" android:id="@+id/tofrom" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" app:text="@string/message_details_header__to" />



            </TableRow>



        </TableLayout>

    </LinearLayout>

</LinearLayout>
