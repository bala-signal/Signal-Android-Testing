<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:animateLayoutChanges="true" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:layout_marginEnd="2dp" android:layout_width="match_parent">



    <org.thoughtcrime.securesms.components.SquareImageView android:adjustViewBounds="true" android:id="@+id/mediapicker_image_item_thumbnail" android:layout_height="wrap_content" android:layout_width="match_parent" android:scaleType="centerCrop" app:src="@drawable/empty_inbox_1" />



    <View android:background="?mediapicker_image_outline" android:layout_height="match_parent" android:layout_width="match_parent" />



    <FrameLayout android:background="@drawable/circle_white" android:id="@+id/mediapicker_play_overlay" android:layout_gravity="center" android:layout_height="36dp" android:layout_width="36dp" android:longClickable="false" android:visibility="gone" app:visibility="gone">



        <ImageView tools:srcCompat="@drawable/triangle_right" android:layout_gravity="center" android:layout_height="18dp" android:layout_marginStart="2dp" android:layout_width="15dp" android:scaleType="fitXY" android:tint="@color/core_ultramarine" />



    </FrameLayout>



    <View android:background="@color/transparent_black_60" android:id="@+id/mediapicker_select_overlay" android:layout_height="match_parent" android:layout_width="match_parent" />



    <FrameLayout android:id="@+id/mediapicker_select_on" android:layout_gravity="top|right|end" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="6dp" android:visibility="gone" app:visibility="visible">



        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/ic_select_on" />



        <TextView android:gravity="center" android:id="@+id/mediapicker_select_order" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/core_white" android:textSize="14dp" app:text="3" />



    </FrameLayout>



    <ImageView android:id="@+id/mediapicker_select_off" android:layout_gravity="top|right|end" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="6dp" android:src="@drawable/ic_select_off" android:visibility="gone" />



</FrameLayout>
