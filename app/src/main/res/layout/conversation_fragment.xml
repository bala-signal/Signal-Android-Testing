<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" android:layout_height="match_parent" android:layout_width="fill_parent">



    <include layout="@layout/conversation_item_banner" android:id="@+id/empty_conversation_banner" android:visibility="gone" />



    <androidx.recyclerview.widget.RecyclerView android:cacheColorHint="?conversation_background" android:clipChildren="false" android:clipToPadding="false" android:id="@android:id/list" android:layout_height="match_parent" android:layout_width="match_parent" android:paddingBottom="2dp" android:scrollbars="vertical" />



    <TextView style="@style/Signal.Text.Caption" android:background="?attr/conversation_item_sticky_date_background" android:elevation="9dp" android:gravity="center" android:id="@+id/scroll_date_header" android:layout_gravity="center_horizontal|top" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:paddingBottom="4dp" android:paddingEnd="12dp" android:paddingStart="12dp" android:paddingTop="4dp" android:textColor="?attr/conversation_item_sticky_date_text_color" android:visibility="gone" app:text="March 1, 2015" />



    <View android:alpha="1" android:background="@drawable/compose_divider_background" android:id="@+id/compose_divider" android:layout_gravity="bottom" android:layout_height="2dp" android:layout_width="match_parent" android:visibility="invisible" />



    <ImageButton android:alpha="0.9" android:background="@drawable/circle_tintable" android:contentDescription="conversation_fragment__scroll_to_the_bottom_content_description" android:elevation="1dp" android:id="@+id/scroll_to_bottom_button" android:layout_gravity="bottom|end" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_marginEnd="10dp" android:layout_width="wrap_content" android:padding="5dp" android:src="@drawable/ic_scroll_down" android:tint="@color/grey_600" android:visibility="invisible" />

</FrameLayout>
