<org.thoughtcrime.securesms.conversationlist.ConversationListItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:background="?attr/conversation_list_item_background" android:focusable="true" android:layout_height="72dp" android:layout_width="match_parent" android:nextFocusLeft="@+id/container" android:nextFocusRight="@+id/fab" android:paddingEnd="16dp" android:paddingStart="16dp">



    <FrameLayout android:id="@+id/avatar_container" android:layout_alignParentStart="true" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginEnd="2dp" android:layout_width="58dp">



        <org.thoughtcrime.securesms.components.AvatarImageView android:contentDescription="conversation_list_item_view__contact_photo_image" android:foreground="@drawable/contact_photo_background" android:id="@+id/contact_photo_image" android:layout_height="52dp" android:layout_width="52dp" app:src="@drawable/ic_contact_picture" />



        <TextView style="@style/Signal.Text.Caption" android:background="?conversation_list_item_unread_background" android:fontFamily="sans-serif-medium" android:gravity="center" android:id="@+id/unread_indicator" android:layout_gravity="end|top" android:layout_height="wrap_content" android:layout_width="wrap_content" android:minWidth="@dimen/unread_count_bubble_diameter" android:padding="5sp" android:textColor="@color/core_white" app:text="1" />



    </FrameLayout>



    <RelativeLayout android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:layout_toEndOf="@id/avatar_container" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="1">



        <org.thoughtcrime.securesms.components.FromTextView style="@style/Signal.Text.Body" android:drawablePadding="5dp" android:ellipsize="end" android:fontFamily="sans-serif-medium" android:id="@+id/from" android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:layout_toStartOf="@+id/thumbnail" android:layout_width="match_parent" android:maxLines="1" android:textColor="?attr/conversation_list_item_contact_color" app:text="Jules Bonnot" />



        <org.thoughtcrime.securesms.components.AlertView tools:useSmallIcon="true" android:id="@+id/indicators_parent" android:layout_alignParentStart="true" android:layout_below="@id/from" android:layout_height="18dp" android:layout_marginEnd="2dp" android:layout_width="18dp" android:paddingTop="2dp" android:visibility="gone" app:visibility="visible" />



        <FrameLayout android:id="@+id/subject_container" android:layout_below="@id/from" android:layout_height="wrap_content" android:layout_toEndOf="@id/indicators_parent" android:layout_toStartOf="@+id/status" android:layout_width="match_parent" android:paddingEnd="1dp">



            <org.thoughtcrime.securesms.components.emoji.EmojiTextView style="@style/Signal.Text.Preview" android:ellipsize="end" android:id="@+id/subject" android:layout_height="wrap_content" android:layout_width="match_parent" android:maxLines="1" android:textColor="?attr/conversation_list_item_subject_color" app:text="Wheels arrive at 3pm flat. This is a somewhat longer message." />



            <org.thoughtcrime.securesms.components.TypingIndicatorView tools:typingIndicator_tint="?conversation_list_typing_tint" android:id="@+id/typing_indicator" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:visibility="gone" />



        </FrameLayout>



        <org.thoughtcrime.securesms.components.ThumbnailView android:contentDescription="conversation_activity__attachment_thumbnail" android:id="@+id/thumbnail" android:layout_alignParentTop="true" android:layout_gravity="center_horizontal" android:layout_height="40dp" android:layout_marginEnd="5dp" android:layout_marginStart="5dp" android:layout_marginTop="5dp" android:layout_toStartOf="@+id/date" android:layout_width="40dp" android:visibility="gone" app:src="@drawable/ic_video_light" app:visibility="visible" />



        <TextView style="@style/Signal.Text.Caption" android:id="@id/date" android:layout_alignBaseline="@+id/from" android:layout_alignParentEnd="true" android:layout_height="wrap_content" android:layout_marginStart="3dp" android:layout_width="wrap_content" android:singleLine="true" android:textColor="?attr/conversation_list_item_date_color" app:text="30 mins" />



        <TextView style="@style/Signal.Text.Caption" android:background="@drawable/archived_indicator_background" android:contentDescription="conversation_list_item_view__archived" android:id="@+id/archived" android:layout_alignParentEnd="true" android:layout_below="@id/date" android:layout_height="wrap_content" android:layout_marginStart="5dp" android:layout_width="wrap_content" android:paddingBottom="2dp" android:paddingEnd="6dp" android:paddingStart="6dp" android:paddingTop="2dp" android:text="@string/conversation_list_item_view__archived" android:textColor="@color/core_white" />





        <FrameLayout android:id="@+id/status" android:layout_alignWithParentIfMissing="true" android:layout_below="@id/date" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_toStartOf="@id/archived" android:layout_width="wrap_content">



            <org.thoughtcrime.securesms.components.DeliveryStatusView tools:iconColor="?attr/conversation_list_item_delivery_icon_color" android:id="@+id/delivery_status" android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" />



        </FrameLayout>



    </RelativeLayout>



</org.thoughtcrime.securesms.conversationlist.ConversationListItem>
