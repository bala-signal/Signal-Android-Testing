<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:id="@+id/incall_screen" android:layout_height="match_parent" android:layout_width="match_parent">



    <org.thoughtcrime.securesms.components.webrtc.PercentFrameLayout android:id="@+id/remote_render_layout" android:layout_height="match_parent" android:layout_width="match_parent" app:visibility="invisible" />



    <org.thoughtcrime.securesms.components.webrtc.PercentFrameLayout android:id="@+id/local_large_render_layout" android:layout_height="match_parent" android:layout_width="match_parent" app:visibility="invisible" />



    

    <RelativeLayout android:animateLayoutChanges="true" android:id="@+id/call_info_1" android:layout_height="match_parent" android:layout_width="match_parent">



        

        <FrameLayout android:gravity="top|center_horizontal" android:id="@+id/image_container" android:layout_below="@+id/call_banner_1" android:layout_height="match_parent" android:layout_width="match_parent">



            <ImageView android:contentDescription="WebRtcCallControls_contact_photo_description" android:id="@+id/photo" android:layout_height="match_parent" android:layout_width="match_parent" android:scaleType="centerCrop" android:visibility="visible" app:src="@drawable/ic_person_large" />



            <LinearLayout android:background="@color/grey_400" android:gravity="center" android:id="@+id/untrusted_layout" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:visibility="gone">



                <TextView android:id="@+id/untrusted_explanation" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:lineSpacingExtra="2sp" android:maxWidth="270dp" android:textSize="16sp" app:text="The safety numbers for your conversation with Masha have changed. This could either mean that someone is trying to intercept your communication, or that Masha simply re-installed Signal. You may wish to verify safety numbers for this contact." />



                <LinearLayout android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_width="wrap_content" android:maxWidth="250dp">



                    <Button android:id="@+id/cancel_safety_numbers" android:layout_height="wrap_content" android:layout_marginEnd="10dp" android:layout_width="wrap_content" android:text="@android:string/cancel" />



                    <Button android:contentDescription="WebRtcCallScreen_accept" android:id="@+id/accept_safety_numbers" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/WebRtcCallScreen_accept" />



                </LinearLayout>





            </LinearLayout>





        </FrameLayout>



        

        <LinearLayout android:id="@+id/call_banner_1" android:layout_alignParentTop="true" android:layout_height="wrap_content" android:layout_width="match_parent" android:minHeight="80dp" android:orientation="vertical">



            <RelativeLayout android:background="@color/core_ultramarine" android:id="@+id/expanded_info" android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingEnd="24dp" android:paddingStart="24dp" android:paddingTop="16dp">



                

                <TextView style="@style/WebRtcCallScreenTextWhite.ExtraLarge" android:ellipsize="end" android:id="@+id/name" android:layout_alignParentTop="true" android:layout_height="wrap_content" android:layout_width="match_parent" android:maxLines="1" android:singleLine="true" android:textAlignment="viewStart" app:text="Ali Connors" />



                

                <LinearLayout android:id="@+id/labelAndNumber" android:layout_below="@id/name" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">



                    <TextView style="@style/WebRtcCallScreenTextWhite.Small" android:contentDescription="redphone_call_card__signal_call" android:id="@+id/label" android:layout_height="wrap_content" android:layout_marginEnd="10dp" android:layout_width="wrap_content" android:singleLine="true" android:text="@string/redphone_call_card__signal_call" />



                    <TextView style="@style/WebRtcCallScreenTextWhite.Small" android:id="@+id/phoneNumber" android:layout_height="wrap_content" android:layout_width="wrap_content" android:singleLine="true" app:text="+14152222222" />



                </LinearLayout>



                

                <TextView style="@style/WebRtcCallScreenTextWhite.Medium" android:id="@+id/elapsedTime" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:singleLine="true" />



            </RelativeLayout>



            <org.thoughtcrime.securesms.components.webrtc.WebRtcCallControls android:background="@color/core_ultramarine" android:id="@+id/inCallControls" android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingBottom="20dp" android:paddingEnd="24dp" android:paddingStart="24dp" android:paddingTop="16dp" />



            <TextView style="@style/WebRtcCallScreenTextWhite.Small" android:background="#8033b5e5" android:gravity="end" android:id="@+id/callStateLabel" android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingBottom="8dp" android:paddingEnd="24dp" android:paddingStart="24dp" android:paddingTop="8dp" android:textAllCaps="true" app:text="connected" />



        </LinearLayout>  



        

        



    </RelativeLayout>



    <org.thoughtcrime.securesms.components.webrtc.PercentFrameLayout android:id="@+id/local_render_layout" android:layout_height="match_parent" android:layout_width="match_parent" app:visibility="invisible" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton tools:backgroundTint="@color/red_500" android:contentDescription="WebRtcCallScreen_end_call" android:focusable="true" android:id="@+id/hangup_fab" android:layout_gravity="bottom|center_horizontal" android:layout_height="wrap_content" android:layout_marginBottom="40dp" android:layout_width="wrap_content" android:src="@drawable/ic_call_end_white_48dp" />



    <org.thoughtcrime.securesms.components.webrtc.WebRtcAnswerDeclineButton android:id="@+id/answer_decline_button" android:layout_gravity="bottom|center" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_width="wrap_content" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>
