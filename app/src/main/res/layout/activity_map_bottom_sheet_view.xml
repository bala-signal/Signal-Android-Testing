<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_gravity="bottom" android:layout_height="match_parent" android:layout_width="match_parent">



    <com.google.android.material.floatingactionbutton.FloatingActionButton app:backgroundTint="?attr/colorPrimary" app:elevation="3dp" app:fabSize="normal" app:layout_anchor="@id/root_bottom_sheet" app:layout_anchorGravity="top|end" app:srcCompat="@drawable/ic_check_24" android:contentDescription="PlacePickerActivity_accept_address" android:id="@+id/place_chosen_button" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_width="wrap_content" android:scaleType="center" android:tint="@color/white" />



    <LinearLayout app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" android:id="@+id/root_bottom_sheet" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">



        <ImageView android:background="@drawable/compose_divider_background" android:layout_height="3dp" android:layout_width="match_parent" android:scaleType="fitXY" />



        <FrameLayout android:background="@color/white" android:layout_height="wrap_content" android:layout_width="match_parent">



            <LinearLayout android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_width="match_parent" android:orientation="vertical">



                <TextView style="@style/Signal.Text.Body" android:ellipsize="end" android:fontFamily="sans-serif-medium" android:id="@+id/text_view_place_name" android:layout_height="wrap_content" android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="18dp" android:layout_width="match_parent" android:maxLines="1" android:textColor="?conversation_item_sent_text_primary_color" tools:text="Short address" />



                <TextView style="@style/Signal.Text.Preview" android:ellipsize="end" android:id="@+id/text_view_place_address" android:layout_height="wrap_content" android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:layout_width="match_parent" android:maxLines="1" android:textColor="?conversation_item_sent_text_secondary_color" tools:text="Precise address" />

            </LinearLayout>



            <ProgressBar style="?android:attr/progressBarStyle" android:id="@+id/progress_bar_place" android:indeterminate="true" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="invisible" tools:visibility="visible" />



        </FrameLayout>



    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
