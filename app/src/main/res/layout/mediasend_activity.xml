<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">



    <FrameLayout android:id="@+id/mediasend_fragment_container" android:layout_height="match_parent" android:layout_width="match_parent" />



    <org.thoughtcrime.securesms.components.InputAwareLayout android:animateLayoutChanges="true" android:id="@+id/mediasend_hud" android:layout_height="match_parent" android:layout_width="match_parent">



        <LinearLayout android:background="@color/transparent_black_40" android:clickable="true" android:id="@+id/mediasend_caption_and_rail" android:layout_gravity="bottom" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">



            <org.thoughtcrime.securesms.components.emoji.EmojiEditText style="@style/Signal.Text.Body" android:autoText="true" android:background="@null" android:contentDescription="MediaSendActivity_add_a_caption" android:hint="@string/MediaSendActivity_add_a_caption" android:id="@+id/mediasend_caption" android:inputType="textAutoCorrect|textCapSentences|textMultiLine" android:layout_height="wrap_content" android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_width="match_parent" android:maxLength="240" android:maxLines="3" android:paddingBottom="6dp" android:paddingTop="6dp" />



            <androidx.recyclerview.widget.RecyclerView android:id="@+id/mediasend_media_rail" android:layout_height="wrap_content" android:layout_marginEnd="2dp" android:layout_marginStart="2dp" android:layout_marginTop="2dp" android:layout_width="match_parent" app:layout_height="64dp" />



            <LinearLayout android:id="@+id/mediasend_compose_row" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="12dp" android:layout_width="match_parent" android:orientation="horizontal">

                

                <ImageView android:id="@+id/mediasend_reveal_toggle" android:layout_gravity="bottom" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:layout_marginEnd="12dp" android:layout_width="wrap_content" app:src="@drawable/ic_view_infinite_32" />



                <LinearLayout android:background="@drawable/compose_background_camera" android:id="@+id/mediasend_compose_container" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:orientation="horizontal" android:paddingEnd="8dp" android:paddingStart="8dp">



                    <org.thoughtcrime.securesms.components.emoji.EmojiToggle android:background="?selectableItemBackgroundBorderless" android:contentDescription="conversation_activity__emoji_toggle_description" android:id="@+id/mediasend_emoji_toggle" android:layout_gravity="bottom" android:layout_height="@dimen/conversation_compose_height" android:layout_width="wrap_content" android:paddingEnd="6dp" android:paddingStart="4dp" />



                    <Space android:layout_height="@dimen/conversation_compose_height" android:layout_width="0dp" />



                    <org.thoughtcrime.securesms.components.ComposeText style="@style/ComposeEditText" android:id="@+id/mediasend_compose_text" android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:nextFocusForward="@+id/send_button" android:nextFocusRight="@+id/send_button" app:hint="Send TextSecure message">

                        <requestFocus />

                    </org.thoughtcrime.securesms.components.ComposeText>



                </LinearLayout>



                <FrameLayout android:background="@drawable/circle_tintable" android:id="@+id/mediasend_send_button_bkg" android:layout_gravity="bottom" android:layout_height="@dimen/conversation_compose_height" android:layout_marginStart="12dp" android:layout_width="@dimen/conversation_compose_height" app:backgroundTint="@color/core_blue">



                    <org.thoughtcrime.securesms.components.SendButton tools:srcCompat="?conversation_transport_sms_indicator" android:background="@drawable/circle_touch_highlight_background" android:contentDescription="conversation_activity__send" android:id="@+id/mediasend_send_button" android:layout_height="match_parent" android:layout_width="match_parent" android:paddingBottom="6dp" android:paddingEnd="6dp" android:paddingStart="6dp" android:paddingTop="6dp" android:scaleType="fitCenter" android:tint="@color/core_white" />



                </FrameLayout>



                <ImageView tools:srcCompat="@drawable/ic_continue_24" android:background="@drawable/media_continue_button_background" android:contentDescription="MediaSendActivity_select_recipients_description" android:id="@+id/mediasend_continue_button" android:layout_gravity="bottom|end" android:layout_height="40dp" android:layout_marginStart="12dp" android:layout_width="40dp" android:padding="6dp" android:visibility="gone" app:visibility="visible" />





            </LinearLayout>



            <include layout="@layout/mediasend_count_button" android:id="@+id/mediasend_count_button" android:layout_gravity="bottom|end" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_marginEnd="16dp" android:layout_marginTop="11dp" android:layout_width="wrap_content" android:visibility="gone" app:visibility="visible" />



            <TextView android:id="@+id/mediasend_characters_left" android:layout_height="wrap_content" android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_width="match_parent" android:paddingBottom="12dp" android:visibility="gone" app:text="160/160 (1)" app:visibility="visible" />



            <ViewStub android:id="@+id/mediasend_emoji_drawer_stub" android:inflatedId="@+id/emoji_drawer" android:layout="@layout/scribble_fragment_emojidrawer_stub" android:layout_height="wrap_content" android:layout_width="match_parent" />



        </LinearLayout>



    </org.thoughtcrime.securesms.components.InputAwareLayout>



</FrameLayout>
