<org.thoughtcrime.securesms.conversation.ConversationTitleView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:id="@+id/conversation_title_view" android:layout_gravity="center_vertical" android:layout_height="match_parent" android:layout_width="match_parent" app:background="#007fff">



    <org.thoughtcrime.securesms.components.AvatarImageView tools:fallbackImageSize="small" tools:inverted="true" android:clickable="true" android:contentDescription="conversation_list_item_view__contact_photo_image" android:cropToPadding="true" android:foreground="@drawable/contact_photo_background" android:id="@+id/contact_photo_image" android:layout_alignParentStart="true" android:layout_centerVertical="true" android:layout_height="36dp" android:layout_marginEnd="10dp" android:layout_width="36dp" android:transitionName="contact_photo" app:src="@drawable/ic_contact_picture" />



    <LinearLayout android:id="@+id/content" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_toEndOf="@id/contact_photo_image" android:layout_width="wrap_content" android:orientation="vertical">



        <org.thoughtcrime.securesms.components.emoji.EmojiTextView style="@style/TextSecure.TitleTextStyle.Dark" android:drawablePadding="5dp" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/title" android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxLines="1" android:transitionName="recipient_name" app:ignore="UnusedAttribute" app:text="Contact name" />



        <LinearLayout android:id="@+id/subtitle_container" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">



            <include layout="@layout/expiration_timer_badge" />



            <ImageView tools:srcCompat="@drawable/ic_check_24" android:id="@+id/verified_indicator" android:layout_height="match_parent" android:layout_marginEnd="3dp" android:layout_width="12dp" android:tint="?conversation_subtitle_color" android:visibility="gone" app:visibility="visible" />



            <TextView style="@style/TextSecure.SubtitleTextStyle.Dark" android:contentDescription="ConversationTitleView_verified" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/verified_subtitle" android:layout_gravity="center_vertical|start" android:layout_height="wrap_content" android:layout_marginEnd="3dp" android:layout_width="wrap_content" android:maxLines="1" android:text="@string/ConversationTitleView_verified" android:textColor="?conversation_subtitle_color" android:textDirection="ltr" />



            <org.thoughtcrime.securesms.components.emoji.EmojiTextView style="@style/TextSecure.SubtitleTextStyle.Dark" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/subtitle" android:layout_gravity="center_vertical|start" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxLines="1" android:textColor="?conversation_subtitle_color" android:textDirection="ltr" app:text="(123) 123-1234" />



        </LinearLayout>



    </LinearLayout>



</org.thoughtcrime.securesms.conversation.ConversationTitleView>
