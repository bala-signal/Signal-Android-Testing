<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:fillViewport="true" android:layout_height="fill_parent" android:layout_width="fill_parent">



    <FrameLayout android:gravity="center" android:layout_height="wrap_content" android:layout_width="fill_parent">

        

        <LinearLayout android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:paddingEnd="16dip" android:paddingStart="16dip" android:paddingTop="10dip" android:visibility="visible">

                

            <com.google.android.material.textfield.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent">



                <EditText android:contentDescription="change_passphrase_activity__old_passphrase" android:hint="@string/change_passphrase_activity__old_passphrase" android:id="@+id/old_passphrase" android:inputType="textPassword" android:layout_height="wrap_content" android:layout_marginBottom="10dip" android:layout_width="match_parent" android:singleLine="true" />



            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent">



                <EditText android:contentDescription="change_passphrase_activity__new_passphrase" android:hint="@string/change_passphrase_activity__new_passphrase" android:id="@+id/new_passphrase" android:inputType="textPassword" android:layout_height="wrap_content" android:layout_width="fill_parent" android:singleLine="true" />



            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent">



                <EditText android:contentDescription="change_passphrase_activity__repeat_new_passphrase" android:hint="@string/change_passphrase_activity__repeat_new_passphrase" android:id="@+id/repeat_passphrase" android:inputType="textPassword" android:layout_height="wrap_content" android:layout_width="fill_parent" android:singleLine="true" />



            </com.google.android.material.textfield.TextInputLayout>



            <LinearLayout android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_width="fill_parent" android:orientation="horizontal">



                <Button android:id="@+id/cancel_button" android:layout_height="wrap_content" android:layout_marginEnd="7dp" android:layout_weight="1" android:layout_width="0dp" android:text="@android:string/cancel" android:textAppearance="?android:attr/textAppearanceMedium" />

                

                <Button android:id="@+id/ok_button" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:text="@android:string/ok" android:textAppearance="?android:attr/textAppearanceMedium" />                

            </LinearLayout>                        

        </LinearLayout>

    </FrameLayout>

</ScrollView>
